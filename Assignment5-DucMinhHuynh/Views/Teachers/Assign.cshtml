@model Assignment5_DucMinhHuynh.Models.Teacher 
@{
    ViewBag.Title = "Assign";
}

<h2>Assign @Model.teacherfname @Model.teacherlname To Class :</h2>


<form method="POST" id="Assignform"action="/Teachers/Assign/@Model.teacherid">
    <label for="classcode">ClassCode:</label>
    <input type="text" id="classcode" name="classcode"><br><br>

    <label for="startdate">Start Date:</label>
    <input type="date" id="startdate" name="startdate"><br><br>

    <label for="finishdate">End Date:</label>
    <input type="date" id="finishdate" name="finishdate"><br><br>

    <label for="classname">Class Name:</label>
    <input type="text" id="classname" name="classname"><br><br>

    <input type="submit" value="Submit"> <button class="btn_cancel"><a href="/Teachers/Show/@Model.teacherid">Cancel</a></button>
</form>
<script>
    const form = document.querySelector('#Assignform');
    const classcode = form.querySelector('#classcode');
    const classname = form.querySelector('#classname');
    const startdate = form.querySelector('#startdate');
    const finishdate = form.querySelector('#finishdate');

    form.addEventListener('submit', function (event) {
        // Prevent the form from submitting if any input is invalid
        if (!classcodeInputValid() || !classnameInputValid() || !startdateInputValid() || !finishdateInputValid()) {
            event.preventDefault();
        }
    });
    function classcodeInputValid() {
        // Check that the teachfname input is not empty
        if (classcode.value.trim() === '') {
            classcode.focus();
            return false;
        }
        return true;
    }
    function classnameInputValid() {
        // Check that the teachlname input is not empty
        if (classname.value.trim() === '') {
            classname.focus();
            return false;
        }
        return true;
    }
    function startdateInputValid() {
        // Check that the hiredate input is not empty
        if (startdate.value.trim() === '' || startdate.value === null) {
            startdate.focus();
            return false;
        }
        return true;
    }
    function finishdateInputValid() {
        // Check that the hiredate input is not empty
        if (finishdate.value.trim() === '' || finishdate.value === null) {
            finishdate.focus();
            return false;
        }
        return true;
    }
</script>
<style>
    form {
        margin: 20px auto;
        width: 400px;
        font-family: Arial, sans-serif;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="email"],
    input[type="date"],
    input[type="number"],
    textarea {
        display: block;
        width: 100%;
        padding: 10px;
        font-size: 16px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn_cancel {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-left: 50px;
    }

        .btn_cancel a {
            color: white;
            text-decoration: none;
        }

        .btn_cancel:hover {
            background-color: #45a049;
        }

    input[type="submit"]:hover {
        background-color: #45a049;
    }

    input[type="text"]:focus,
    input[type="email"]:focus,
    input[type="date"]:focus,
    input[type="number"]:focus,
    textarea:focus {
        outline: none;
        border-color: #4CAF50;
    }
</style>
